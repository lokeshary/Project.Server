@model Employee
@{ Layout = "_Layout"; ViewBag.Title = "Add a Employee";}

<h2>Add a Employee <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input class="form-control" name="StartLocation" />
    </div>
    <div class="form-group">
        <label for="Phonenumber">Phone number:</label>
        <input class="form-control" name="EndLocation" />
    </div>
    <div class="form-group">
        <label for="DateofBirth">DateOfBirth:</label>
        <input class="form-control" name="EndLocation" />
    </div>
    
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Employee</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>EmployeeID</th>
                <th>Name</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>DateOfBirth</th>
                
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.EmployeeId</td>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.PhoneNumber</td>
            </tr>
        </tbody>
    </table>
}