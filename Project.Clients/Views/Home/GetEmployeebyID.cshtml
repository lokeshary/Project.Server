@model Employee
@{ Layout = "_Layout"; ViewBag.Title = "Get Employee by Id";}

<h2>Get Employee by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Employee</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Employee</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>EmployeeID</th>
                <th>Name</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>DateOfBirth</th>
                <th>Sid</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.EmployeeId</td>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.PhoneNumber</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.Sid</td>
            </tr>
        </tbody>
    </table>
}