@model IEnumerable<Employee>
@{ Layout = "_Layout"; ViewBag.Title = "All Employee";}

<h2>All Employees</h2>
<a asp-action="AddEmployee" class="btn btn-sm btn-primary">Add Employee</a>
<a asp-action="GetEmployee" class="btn btn-sm btn-secondary">Get Employee</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>EmployeId</th>
            <th>Name</th>
            <th>DateOfBirth</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Sid</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
        <tr>
            <td>@r.EmployeeId</td>
            <td>@r.Name</td>
            <td>@r.Email</td>
            <td>@r.DateOfBirth</td>
            <td>@r.PhoneNumber</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = r.EmployeeId, controller = "Home"}) |
                @Html.ActionLink("Edit", "Edit", new { id = r.EmployeeId, controller = "Home" }) |
                @Html.ActionLink("Delete", "Delete", new { id = r.EmployeeId, controller = "Home" })
            </td>
        </tr>
        }
    </tbody>
</table>