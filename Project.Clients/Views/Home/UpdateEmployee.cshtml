@model Employee
@{ Layout = "_Layout"; ViewBag.Title = "Update a Employee";}

<h2>Update a Employee <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <input class="form-control" asp-for="EmployeeId" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input class="form-control" asp-for="DateOfBirth" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>DateOfBirth</th>
                <th>Phone Number </th>
              
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.EmployeeId</td>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.PhoneNumber</td>
            </tr>
        </tbody>
    </table>
}